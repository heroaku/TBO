name: Sync Repos to Folders

on: workflow_dispatch

jobs:
  sync:
    runs-on: ubuntu-latest
    
    steps:
      - uses: actions/checkout@v4
      
      - name: Setup Git
        run: |
          git config user.name "github-actions[bot]"
          git config user.email "41898282+github-actions[bot]@users.noreply.github.com"
      
      - name: Sync DBY
        run: |
          echo "åŒæ­¥ DBY ä»“åº“åˆ° DBY/ æ–‡ä»¶å¤¹..."
          mkdir -p DBY
          rm -rf DBY/*
          TEMP_DIR=$(mktemp -d)
          git clone --depth 1 https://github.com/huangxinyueus/dby.git "$TEMP_DIR"
          cp -r "$TEMP_DIR"/* DBY/ 2>/dev/null || true
          rm -rf "$TEMP_DIR"
      
      - name: Sync N3RD
        run: |
          echo "åŒæ­¥ N3RD ä»“åº“åˆ° N3RD/ æ–‡ä»¶å¤¹..."
          mkdir -p N3RD
          rm -rf N3RD/*
          TEMP_DIR=$(mktemp -d)
          git clone --depth 1 https://github.com/n3rddd/N3RD.git "$TEMP_DIR"
          cp -r "$TEMP_DIR"/* N3RD/ 2>/dev/null || true
          rm -rf "$TEMP_DIR"
      
      - name: Commit and push
        run: |
          git add DBY/ N3RD/
          if ! git diff --cached --quiet; then
            git commit -m "ğŸ”„ åŒæ­¥æ›´æ–° - $(date)"
            git push
          fi
