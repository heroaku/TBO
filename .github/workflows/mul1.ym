              # å¤åˆ¶æ‰€æœ‰æ–‡ä»¶åˆ°ç›®æ ‡æ–‡ä»¶å¤¹
              cp -r "$TEMP"/* "$folder"/ 2>/dev/null || true
              
              # ç»Ÿè®¡æ–‡ä»¶æ•°é‡
              file_count=$(find "$folder" -type f 2>/dev/null | wc -l)
              echo "âœ… æˆåŠŸ ($file_count ä¸ªæ–‡ä»¶)"
              
