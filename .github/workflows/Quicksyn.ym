name: Quick Sync

on: workflow_dispatch

jobs:
  sync:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      
      - name: Setup & Sync
        run: |
          # é…ç½®Git
          git config user.name "github-actions"
          git config user.email "github-actions@github.com"
          
          # åŒæ­¥åˆ—è¡¨ï¼ˆæ¯è¡Œï¼šæ–‡ä»¶å¤¹:URLï¼‰
          while IFS=: read -r folder url; do
            [[ -z "$folder" || "$folder" == \#* ]] && continue
            
            echo "ğŸ“¦ åŒæ­¥ $folder..."
            tmp=$(mktemp -d)
            
            if git clone --depth 1 "$url" "$tmp" 2>/dev/null; then
              mkdir -p "$folder"
              rm -rf "$folder"/*
              cp -r "$tmp"/* "$folder"/ 2>/dev/null
              echo "  âœ… æˆåŠŸ"
            else
              echo "  âŒ å¤±è´¥"
            fi
            
            rm -rf "$tmp"
          done << 'EOF'
          NFXC:https://github.com/yoursmile66/TVBox.git
          # DBY:https://github.com/huangxinyueus/dby.git
          # N3RD:https://github.com/n3rddd/N3RD.git
          EOF
          
          # æäº¤å’Œæ¨é€
          git add .
          git commit -m "Sync $(date)" || exit 0
          git push
